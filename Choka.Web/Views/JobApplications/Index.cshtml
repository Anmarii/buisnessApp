@model IEnumerable<Choka.Web.Models.JobApplication>

@{
    ViewData["Title"] = "Zgłoszenia kandydatów";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj nowe zgłoszenie</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Imię i nazwisko</th>
            <th>Email</th>
            <th>Data zgłoszenia</th>
            <th>Stanowisko</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@item.JobOffer?.Title</td>
            <td>@item.Status</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>

                <form asp-action="Accept" asp-route-id="@item.Id" method="post" style="display:inline">
                    <button type="submit" class="btn btn-success btn-sm">Akceptuj</button>
                </form>
                <form asp-action="Reject" asp-route-id="@item.Id" method="post" style="display:inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Odrzuć</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
